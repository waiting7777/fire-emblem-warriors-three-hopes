// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MS_Hero {
  id          Int     @id @default(autoincrement())
  name        String
  cost        Int
  power       Int
  ability     String
  description String
  flavor      String
  collectible Boolean
  category    String
  source      String
}

model MS_Location {
  id               Int    @id @default(autoincrement())
  name             String
  description      String
  name_zhtw        String
  description_zhtw String
}

model TI_Character {
  id     Int    @id @default(autoincrement())
  name   String
  season String
}
